@model IEnumerable<CMS.Application.ViewModels.MenuViewModel>

<div class="layout-sidebar">
    <div class="layout-sidebar-backdrop"></div>
    <div class="layout-sidebar-body">
        <div class="custom-scrollbar">
            <nav id="sidenav" class="sidenav-collapse collapse">
                <ul class="sidenav">
                    <li class="sidenav-item">
                        <a href="/Admin/Base/ChangeCulture?ddlCulture=vi&returnUrl=@Request.RawUrl">
                            <span class="sidenav-label"><img class="img-flag" src="~/Content/admin/img/flags/4x3/vn.svg" />Tiếng Việt</span>
                        </a>
                    </li>
                    <li class="sidenav-item">
                        <a href="/Admin/Base/ChangeCulture?ddlCulture=en&returnUrl=@Request.RawUrl">
                            <span class="sidenav-label"><img class="img-flag" src="~/Content/admin/img/flags/4x3/gb.svg" />English</span>
                        </a>
                    </li>
                    <li class="sidenav-heading">Navigation</li>
                    @foreach (var item in Model)
                    {<!-- co item con -->
                        if (item.Childrens.Count() > 0)
                        {
                            <li class="sidenav-item has-subnav">
                                <a href="dashboard-1.html" aria-haspopup="true">
                                    <span class="sidenav-icon @item.Icon"></span>
                                    <span class="sidenav-label">@item.Name</span>
                                </a>
                                <ul class="sidenav-subnav collapse">
                                    <li class="sidenav-subheading">@item.Name</li>
                                    @foreach (var itemChild in item.Childrens)
                                    {
                                        <li>
                                            <a href="@itemChild.Url">
                                                <span class="@itemChild.Icon"></span> @itemChild.Name
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="sidenav-item">
                                <a href="@item.Url">
                                    <span class="sidenav-icon @item.Icon"></span>
                                    <span class="sidenav-label">@item.Name</span>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

